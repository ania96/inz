<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/holo_orange_light" >


    <Button
        android:id="@+id/buttonMyLocalisation"
        android:layout_width="150dp"
        android:layout_height="91dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="Moja Lokalizacja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMyFamily"
        android:layout_width="150dp"
        android:layout_height="91dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Moja Rodzina"
        app:layout_constraintEnd_toStartOf="@+id/buttonMyLocalisation"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonReminder"
        android:layout_width="150dp"
        android:layout_height="91dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="8dp"
        android:text="Przypominajka"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMyFamily"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonSOS"
        android:layout_width="150dp"
        android:layout_height="91dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="108dp"
        android:text="SOS!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonReminder"
        app:layout_constraintTop_toBottomOf="@+id/buttonMyLocalisation"
        app:layout_constraintVertical_bias="0.317" />

</android.support.constraint.ConstraintLayout>